@page "/cartoon"

<div class="page-container">
    <div class="anime-container">
        @foreach (var anime in AnimeList)
        {
            <div class="anime-card">
                <div class="anime-image">
                    <img src="@anime.ImageUrl" alt="@anime.Title" />
                </div>
                <div class="anime-info">
                    <h3>@anime.Title</h3>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="star @(i <= anime.Rating ? "filled" : "")">★</span>
                        }
                        <span class="rating-number">@anime.Rating.ToString("F1")</span>
                    </div>
                    <p class="description">@anime.Description</p>
                    <div class="review-section">
                        <p class="review-content">@anime.UserReview</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .page-container {
        background: white;
        width: 80%;
        padding: 20px;
        margin: 0 auto;
    }

    .anime-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .anime-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease;
        border: 2px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .anime-card:hover {
        transform: translateY(-5px);
    }

    .anime-image {
        width: 100%;
        height: 300px;
        overflow: hidden;
    }

    .anime-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .anime-card:hover .anime-image img {
        transform: scale(1.05);
    }

    .anime-info {
        padding: 15px;
    }

    .anime-info h3 {
        margin: 0 0 10px 0;
        color: #333;
        font-size: 1.2rem;
        background: rgba(0, 0, 0, 0.05);
        padding: 8px;
        border-radius: 6px;
    }

    .rating {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .star {
        color: #ccc;
        font-size: 1.2rem;
        margin-right: 2px;
    }

    .star.filled {
        color: #FFD700;
    }

    .rating-number {
        margin-left: 8px;
        color: #333;
        font-size: 0.9rem;
    }

    .description {
        color: #333;
        font-size: 0.9rem;
        line-height: 1.4;
        margin: 0 0 15px 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .review-section {
        margin-top: 15px;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        padding-top: 15px;
    }

    .review-content {
        color: #333;
        font-size: 0.9rem;
        line-height: 1.4;
        margin: 0;
        font-style: italic;
    }
</style>

