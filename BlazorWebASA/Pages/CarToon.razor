@page "/cartoon"

<div class="page-container">
    <h1 class="page-title">我的动漫推荐</h1>
    <div class="anime-container">
        @foreach (var anime in AnimeList)
        {
            <div class="anime-card">
                <div class="anime-image">
                    <img src="@anime.ImageUrl" alt="@anime.Title" />
                </div>
                <div class="anime-info">
                    <h3>@anime.Title</h3>
                    <div class="rating">
                        <div class="stars-container">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star @(i <= anime.Rating ? "filled" : "")">★</span>
                            }
                        </div>
                        <div class="rating-details">
                            <span class="rating-number">@anime.Rating.ToString("F1")</span>
                            <span class="rating-text">分</span>
                        </div>
                    </div>
                    <p class="description">@anime.Description</p>
                    <div class="review-section">
                        <p class="review-content">@anime.UserReview</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .page-container {
        padding: 2rem;
        margin: 0 auto;
    }

    .page-title {
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
        font-size: 2.5rem;
    }

    .anime-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        padding: 0 1rem;
    }

    .anime-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .anime-card:hover {
        transform: translateY(-5px);
    }

    .anime-image {
        width: 100%;
        padding-top: 110%; /* 设置图片容器的高宽比为 7:5 */
        position: relative;
        overflow: hidden;
    }

    .anime-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .anime-info {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .anime-info h3 {
        margin: 0 0 1rem 0;
        color: #2c3e50;
        font-size: 1.5rem;
    }

    .rating {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        background: #f8f9fa;
        padding: 0.5rem 1rem;
        border-radius: 20px;
    }

    .stars-container {
        display: flex;
        align-items: center;
    }

    .star {
        color: #ddd;
        font-size: 1.4rem;
        margin-right: 4px;
        transition: color 0.3s ease;
    }

    .star.filled {
        color: #ffd700;
        text-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
    }

    .rating-details {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .rating-number {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2c3e50;
    }

    .rating-text {
        color: #666;
        font-size: 0.9rem;
    }

    .description {
        color: #666;
        margin-bottom: 1rem;
        line-height: 1.5;
        flex: 1;
    }

    .review-section {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        margin-top: auto;
    }

    .review-content {
        color: #555;
        font-style: italic;
        margin: 0;
    }
    
</style>

