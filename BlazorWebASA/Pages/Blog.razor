@page "/blog"
@inherits Blog_razor

<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    primary: '#2563EB', // 主色调：专业蓝
                    secondary: '#93C5FD', // 辅助色：浅蓝
                    neutral: '#F8FAFC', // 中性色：背景浅灰
                },
                fontFamily: {
                    inter: ['Inter', 'system-ui', 'sans-serif'],
                },
            }
        }
    }
</script>

<!-- 自定义工具类与动画 -->
<style>

    .content-auto {
        content-visibility: auto;
    }

    .animate-float {
        animation: float 4s ease-in-out infinite;
    }

    .animate-pulse-soft {
        animation: pulse 5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    .bg-glass {
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
    }

    .progress-bar-animation {
        animation: progress 2s ease-out forwards;
    }

    /* 悬浮动画：模拟轻微浮动 */
    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* 背景渐变动效：缓慢流动 */
    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* 进度条动画：从0到目标进度 */
    @@keyframes progress {
        0% { width: 0; }
        100% { width: 75%; }
    }
    /* 全局样式 */
    .allstyle {
        font-family: 'Inter', system-ui, sans-serif;
        background: linear-gradient(120deg, #F8FAFC, #EFF6FF, #DBEAFE);
        background-size: 200% 200%;
        animation: gradientShift 12s ease infinite;
    }
</style>

<div class="allstyle min-h-screen flex flex-col overflow-x-hidden">
   

    <!-- 2. 主内容区：核心提示 + 开发进度 -->
    <main class="flex-grow container mx-auto px-4 flex flex-col items-center justify-center py-16 md:py-24">
        <!-- 背景装饰：增强层次感（不干扰内容） -->
        <div class="fixed top-1/4 left-1/4 w-72 h-72 bg-primary/5 rounded-full blur-3xl"></div>
        <div class="fixed bottom-1/3 right-1/4 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>

        <!-- 核心提示容器：玻璃拟态 + 精致阴影 -->
        <div
            class="relative z-10 w-full max-w-md bg-white/90 bg-glass rounded-2xl p-8 md:p-10 shadow-lg shadow-primary/10 border border-secondary/10 transition-all duration-300 hover:shadow-xl hover:shadow-primary/15">
            <!-- 开发中图标：悬浮动效 + 渐变 -->
            <div class="flex justify-center mb-8">
                <div
                    class="w-24 h-24 rounded-full bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center animate-float">
                    <i class="fa fa-code-fork text-5xl text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary"></i>
                </div>
            </div>

            <!-- 核心提示文字：渐变 + 柔和脉冲 -->
            <h1 class="text-center text-[clamp(1.8rem,5vw,3rem)] font-medium text-transparent bg-clip-text bg-gradient-to-r from-gray-800 to-gray-600 animate-pulse-soft leading-tight mb-4">
                正在开发中
            </h1>

            <!-- 辅助说明：降低用户困惑 -->
            <p class="text-center text-gray-500 text-sm md:text-base mb-8 opacity-90">
                当前页面正在开发中，请稍后再来
            </p>

            <!-- 开发进度模块：可视化反馈 -->
            <div class="w-full mb-10">
                <div class="flex justify-between items-center mb-2">
                    <span class="text-sm font-medium text-gray-600">开发进度</span>
                    <span class="text-sm font-semibold text-primary">75%</span>
                </div>
                <div class="w-full h-2 bg-gray-100 rounded-full overflow-hidden">
                    <div class="h-full bg-gradient-to-r from-primary to-secondary rounded-full progress-bar-animation"
                         style="width: 75%"></div>
                </div>
            </div>
            
        </div>
    </main>
</div>

