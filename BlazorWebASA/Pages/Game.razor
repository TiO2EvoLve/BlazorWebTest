@page "/game"
@inherits Game_razor

<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    primary: '#171a21',
                    secondary: '#2a475e',
                    accent: '#66c0f4',
                    neutral: '#c7d5e0',
                    'neutral-dark': '#1b2838',
                },
                fontFamily: {
                    inter: ['Inter', 'sans-serif'],
                },
            }
        }
    }
</script>

@if(@player == null)
{
<div class="flex items-center justify-center min-h-screen bg-neutral-dark text-neutral">
    <div class="text-center">
        <div class="loader mb-4"></div>
        <p class="text-lg">正在加载用户数据...</p>
    </div>
</div>
}
else
{
<div class="bg-white text-gray-900 min-h-screen flex flex-col">
    <!-- 主要内容 -->
    <main class="flex-grow container mx-auto px-2 py-6">
        <div class="bg-white rounded-xl p-4 md:p-6 mb-6 border border-gray-200">
            <div class="flex flex-col md:flex-row items-center gap-4 md:gap-6">
                <div class="flex-shrink-0">
                    <div class="relative rounded-lg overflow-hidden border-2 border-accent/50">
                        <img id="avatar-full" src="@player.AvatarFull" alt="用户大图头像"
                             class="w-32 h-32 object-cover">
                        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-2">
                            <div class="flex items-center justify-between">
                                <span id="personaname"
                                      class="text-gray-900 font-bold text-base text-shadow">@player.PersonaName</span>
                                <span id="status-badge"
                                      class="bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded-full">@state[player.Personastate]</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex-grow w-full">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        <div class="bg-gray-50 rounded-lg p-3">
                            <h2 class="text-accent text-base font-semibold mb-2 flex items-center">
                                <i class="fa fa-user-circle mr-2"></i>基本信息
                            </h2>
                            <ul class="space-y-2 text-sm">
                                <li class="flex justify-between">
                                    <span class="text-gray-500">Steam ID:</span>
                                    <span id="steamid" class="font-medium">@player.SteamId</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">注册时间:</span>
                                    <span id="timecreated" class="font-medium">@GetTime(player.Timecreated)</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">最后登录:</span>
                                    <span id="lastlogoff" class="font-medium">@GetTime(player.Lastlogoff)</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">所在地区:</span>
                                    <span id="location" class="font-medium">@player.Loccountrycode</span>
                                </li>
                            </ul>
                        </div>

                        <div class="bg-gray-50 rounded-lg p-3">
                            <h2 class="text-accent text-base font-semibold mb-2 flex items-center">
                                <i class="fa fa-cog mr-2"></i>账户状态
                            </h2>
                            <ul class="space-y-2 text-sm">
                                <li class="flex justify-between">
                                    <span class="text-gray-500">个人资料:</span>
                                    <span id="profile-state" class="font-medium">公开</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">评论权限:</span>
                                    <span id="comment-permission" class="font-medium">允许</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">主群组:</span>
                                    <span id="primary-clan" class="font-medium">群组ID</span>
                                </li>
                                <li class="flex justify-between">
                                    <span class="text-gray-500">状态标志:</span>
                                    <span id="state-flags" class="font-medium">标志</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-4 flex space-x-2">
                        <a id="profile-url" href="@player.Profileurl" target="_blank"
                           class="bg-accent hover:bg-accent/80 text-white font-bold py-1.5 px-4 rounded-md transition-all duration-300 flex items-center">
                            <i class="fa fa-external-link mr-2"></i>查看完整资料
                        </a>
                        <a href="@player.Profileurl"
                            class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-1.5 px-4 rounded-md transition-all duration-300 flex items-center">
                            <i class="fa fa-user-plus mr-2"></i>添加好友
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- 最近玩过的游戏 -->
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-white mb-4 flex items-center">
                <i class="fa fa-gamepad text-accent mr-2"></i>最近玩过的游戏
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                <!-- 游戏卡片1 -->
                <div class="bg-secondary/30 rounded-lg overflow-hidden shadow-lg hover-scale">
                    <img src="https://picsum.photos/400/200?random=1" alt="游戏封面" class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-white text-lg mb-1">游戏名称</h3>
                        <p class="text-gray-400 text-sm mb-2">最近玩了 12 小时</p>
                        <div class="flex justify-between items-center">
                            <span class="text-accent text-sm">上次玩: 2天前</span>
                            <button
                                class="bg-accent/20 hover:bg-accent/40 text-accent px-3 py-1 rounded-md text-sm transition-colors duration-300">
                                查看详情
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 游戏卡片2 -->
                <div class="bg-secondary/30 rounded-lg overflow-hidden shadow-lg hover-scale">
                    <img src="https://picsum.photos/400/200?random=2" alt="游戏封面" class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-white text-lg mb-1">游戏名称</h3>
                        <p class="text-gray-400 text-sm mb-2">最近玩了 8 小时</p>
                        <div class="flex justify-between items-center">
                            <span class="text-accent text-sm">上次玩: 5天前</span>
                            <button
                                class="bg-accent/20 hover:bg-accent/40 text-accent px-3 py-1 rounded-md text-sm transition-colors duration-300">
                                查看详情
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 游戏卡片3 -->
                <div class="bg-secondary/30 rounded-lg overflow-hidden shadow-lg hover-scale">
                    <img src="https://picsum.photos/400/200?random=3" alt="游戏封面" class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-white text-lg mb-1">游戏名称</h3>
                        <p class="text-gray-400 text-sm mb-2">最近玩了 3 小时</p>
                        <div class="flex justify-between items-center">
                            <span class="text-accent text-sm">上次玩: 1周前</span>
                            <button
                                class="bg-accent/20 hover:bg-accent/40 text-accent px-3 py-1 rounded-md text-sm transition-colors duration-300">
                                查看详情
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 游戏卡片4 -->
                <div class="bg-secondary/30 rounded-lg overflow-hidden shadow-lg hover-scale">
                    <img src="https://picsum.photos/400/200?random=4" alt="游戏封面" class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-white text-lg mb-1">游戏名称</h3>
                        <p class="text-gray-400 text-sm mb-2">最近玩了 5 小时</p>
                        <div class="flex justify-between items-center">
                            <span class="text-accent text-sm">上次玩: 2周前</span>
                            <button
                                class="bg-accent/20 hover:bg-accent/40 text-accent px-3 py-1 rounded-md text-sm transition-colors duration-300">
                                查看详情
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

}

